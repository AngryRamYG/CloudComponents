@page "/DateTimePicker"
@inject CloudPage cloudPage
@{
    cloudPage.Title = "Date Time Picker";
}

<div class="amc-datetimepicker-section">
    <div>
        <h2>Date Picker</h2>
        <DateTimePicker Mode="DateTimePickerMode.Date"></DateTimePicker>
    </div>
    <div>
        <h2>Time Picker</h2>
        <DateTimePicker Mode="DateTimePickerMode.Time"></DateTimePicker>
    </div>
    <div>
        <h2>Date and Time Picker</h2>
        <DateTimePicker Mode="DateTimePickerMode.DateAndTime"></DateTimePicker>
    </div>
</div>


