@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.Extensions.DependencyInjection
@namespace AngryMonkey.Cloud.Components
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject CloudWeb cloudWeb

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

	<title>@cloudWeb.Options.DefaultTitle</title>

	<base href="@((MarkupString)cloudWeb.Options.BaseUrl)" />

	@foreach (CloudBundle bundle in cloudWeb.Options.SiteBundles)
	{
		<component type="typeof(CloudBundle)" param-Source="bundle.Source" param-MinOnRelease="bundle.MinOnRelease" param-JQuery="bundle.JQuery" render-mode="ServerPrerendered" />
	}

	<component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
	@RenderBody()

	<script src="_framework/blazor.server.js"></script>
</body>
</html>